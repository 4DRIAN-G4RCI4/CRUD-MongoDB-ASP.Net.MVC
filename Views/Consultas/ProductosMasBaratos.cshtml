@model List<Producto>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 p-4 shadow-lg rounded bg-glass">

            <!-- Título con diseño elegante -->
            <h2 class="text-center text-gold font-weight-bold mb-4">
                <i class="fas fa-tags"></i> Productos Más Baratos
            </h2>

            <!-- Tabla estilizada -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center table-dark table-striped">
                    <thead>
                        <tr>
                            <th><i class="fas fa-cogs"></i> Nombre</th>
                            <th><i class="fas fa-file-alt"></i> Descripción</th>
                            <th><i class="fas fa-dollar-sign"></i> Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in Model)
                        {
                            <tr>
                                <td class="font-weight-bold text-light">@producto.Nombre</td>
                                <td class="font-weight-bold text-light">@producto.Descripcion</td>
                                <td class="font-weight-bold text-warning">@string.Format("{0:C}", producto.Precio)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Botón para regresar -->
            <div class="text-center mt-4">
                <a href="https://localhost:7014/Productos/Index" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
            </div>

        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    /* Fondo con imagen de restaurante chino */
    body {
        background: url('https://stylelovely.com/wp-content/uploads/los_mejores_restaurantes_chinos.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Playfair Display', serif;
        color: white;
    }

    /* Contenedor con efecto cristal (glassmorphism) */
    .bg-glass {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
    }

    /* Color dorado para títulos */
    .text-gold {
        color: #FFD700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    /* Tabla con colores elegantes */
    .table {
        border-radius: 10px;
        overflow: hidden;
    }

        .table th {
            background-color: rgba(0, 0, 0, 0.8);
            color: #FFD700 !important;
            font-size: 1.2rem;
        }

        .table tbody tr:hover {
            background-color: rgba(255, 215, 0, 0.2);
            transition: 0.3s ease-in-out;
        }

    /* Botón con efecto elegante */
    .btn-outline-light {
        border: 2px solid #FFD700;
        color: #FFD700;
        font-size: 1.2rem;
        transition: 0.3s;
    }

        .btn-outline-light:hover {
            background: #FFD700;
            color: black;
            box-shadow: 0px 0px 10px #FFD700;
        }
</style>

<!-- Importar FontAwesome para los iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">

