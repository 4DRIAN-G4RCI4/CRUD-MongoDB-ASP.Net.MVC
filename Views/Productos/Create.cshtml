@{
    ViewData["Title"] = "Crear Producto";
}

@model Producto

<!-- Contenedor principal -->
<div class="container mt-10">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-12 p-5 shadow-lg rounded bg-white">

            <!-- Título de la página -->
            <h2 class="text-center text-primary font-weight-bold mb-4">Agregar Nuevo Producto</h2>

            <!-- Formulario de creación -->
            <form asp-action="Create">
                <!-- Nombre del producto -->
                <div class="form-group">
                    <label asp-for="Nombre" class="text-dark font-weight-semibold"></label>
                    <input asp-for="Nombre" class="form-control border-primary shadow-sm rounded-3" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Descripción del producto -->
                <div class="form-group mt-3">
                    <label asp-for="Descripcion" class="text-dark font-weight-semibold"></label>
                    <textarea asp-for="Descripcion" class="form-control border-primary shadow-sm rounded-3" rows="3" required></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Ingredientes del producto -->
                <div class="form-group mt-3">
                    <label asp-for="Ingredientes" class="text-dark font-weight-semibold"></label>
                    <input asp-for="Ingredientes" class="form-control border-primary shadow-sm rounded-3" required />
                    <span asp-validation-for="Ingredientes" class="text-danger"></span>
                </div>

                <!-- Tipo de platillo -->
                <div class="form-group mt-3">
                    <label asp-for="TipoPlatillo" class="text-dark font-weight-semibold"></label>
                    <select asp-for="TipoPlatillo" class="form-control border-primary shadow-sm rounded-3">
                        <option value="Entrada">Entrada</option>
                        <option value="Plato fuerte">Plato fuerte</option>
                        <option value="Postre">Postre</option>
                        <option value="Bebida">Bebida</option>
                    </select>
                </div>

                <!-- Precio del producto -->
                <div class="form-group mt-3">
                    <label asp-for="Precio" class="text-dark font-weight-semibold"></label>
                    <input asp-for="Precio" class="form-control border-primary shadow-sm rounded-3" type="number" step="0.01" required />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <!-- Imagen del producto -->
                <div class="form-group mt-3">
                    <label asp-for="ImagenUrl" class="text-dark font-weight-semibold"></label>
                    <input asp-for="ImagenUrl" class="form-control border-primary shadow-sm rounded-3" placeholder="URL de la imagen" />
                    <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                </div>

                <!-- Botón de enviar -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg w-100 shadow">Crear Producto</button>
                </div>
            </form>

            <!-- Botón para regresar -->
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-primary w-100">Volver a la lista</a>
            </div>

        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #f0f8ff; /* Azul claro suave */
        font-family: 'Helvetica Neue', sans-serif;
    }

    .container {
        max-width: 600px;
    }

    h2 {
        font-size: 2rem;
        font-weight: 700;
        color: #0056b3;
    }

    .form-control {
        font-size: 1.1rem;
        padding: 12px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1.2rem;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
        font-size: 1rem;
    }

    .btn:hover {
        opacity: 0.9;
        transition: 0.3s ease-in-out;
    }
</style>
